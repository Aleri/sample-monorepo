{
  "name": "app",
  "version": "1.0.0",
  "main": "cjs/index.js",
  "types": "cjs/index.d.ts",
  "scripts": {
    "clean": "rimraf ./cjs ./umd",
    "prebuild": "yarn clean",
    "build": "run-p build:cjs build:umd",
    "build:cjs": "tsc --project src --outDir cjs --module commonjs",
    "build:umd": "yarn bundle:prod",
    "bundle:prod": "webpack --mode production",
    "bundle:dev": "webpack --mode development --devtool source-map",
    "lint": "run-p lint:src lint:test",
    "lint:src": "tslint --project src",
    "lint:test": "tslint --project test",
    "test": "mocha -r typescript-support \"test/**/*.spec.ts?(x)\" --watch-extensions ts,tsx"
  },
  "dependencies": {
    "components": "^1.0.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "files": [
    "cjs",
    "umd"
  ],
  "license": "MIT",
  "repository": "git@github.com:wixplosives/sample-monorepo.git",
  "private": true
}
